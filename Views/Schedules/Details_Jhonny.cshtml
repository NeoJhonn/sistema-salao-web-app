    <dl class="row">
        <dt class="col-sm-2 fw-bolder">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2 fw-bolder">
            @Html.DisplayNameFor(model => model.Professional)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Professional)
        </dd>
        <dt class="col-sm-2 fw-bolder">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Service)
