@model MvcSistemaSalao.Models.Client

@{
    ViewData["Title"] = "Excluir Cadastro";
}

<style>
    .modal-body dl {
        margin-bottom: -5px;
    }

        .modal-body dl dt {
        }

        .modal-body dl dd {
            position: relative;
            left: 36%;
            margin-top: -1.43rem;
        }

</style>

<div class="modal-dialog" style="margin-top: 100px">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title fw-bold" id="modalLabel">Excluir este Cadastro?</h4>
            <button type="button" class="border-0 bg-transparent btn-close" data-bs-dismiss="modal" aria-label="Close">
            </button>
        </div>
        <div class="modal-body">
            <dl class="row">
                <dt class="col-sm-2 col-md-12 fw-bold">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2 col-md-12 fw-bold">
                    @Html.DisplayNameFor(model => model.BirthDate)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.BirthDate)
                </dd>
                <dt class="col-sm-2 col-md-12 fw-bold">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2 col-md-12 fw-bold">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </dd>
                <dt class="col-sm-2 col-md-12 fw-bold">
                    @Html.DisplayNameFor(model => model.Professional)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Professional)
                </dd>
            </dl>
        </div>
        <div class="modal-footer">
            <div class="form-control border-0">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Excluir" class="btn btn-danger border-warning" />
                    <a asp-action="Index" class="btn btn-success border-warning">Voltar para lista</a>
                </form>
            </div>
        </div>
    </div>
</div>

        
